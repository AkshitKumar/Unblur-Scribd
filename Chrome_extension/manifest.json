{
    "name": "Unblur Scribd",
    "description": "Unblur Scribd duh!",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Make this page red"
    },
    "content_scripts": [{
        "matches": ["http://www.google.com/*"],
        "js": ["jquery.js", "unblur.js"]
    }],
    "manifest_version": 2
}
